{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [{
    "type": "node",
    "request": "launch",
    "name": "Jest Current File",
    "program": "${workspaceFolder}/node_modules/.bin/jest",
    "args": ["${relativeFile}"],
    "cwd": "${fileDirname}",
    "console": "integratedTerminal",
    "internalConsoleOptions": "neverOpen"
  }, {
    "type": "node",
    "request": "launch",
    "name": "gimbal",
    "runtimeArgs": [
      "-r",
      "ts-node/register",
      "-r",
      "tsconfig-paths/register"
    ],
    "args": [
      "${workspaceFolder}/packages/gimbal/src/index.ts",
      "--cwd",
      "${workspaceFolder}/examples/${input:appInput}"
    ],
    "env": {
      "TS_NODE_PROJECT": "${workspaceFolder}/packages/gimbal/tsconfig.json"
    },
    "skipFiles": [
      "<node_internals>/**/*.js"
    ]
  }, {
    "type": "node",
    "request": "launch",
    "name": "gimbal audit",
    "runtimeArgs": [
      "-r",
      "ts-node/register",
      "-r",
      "tsconfig-paths/register"
    ],
    "args": [
      "${workspaceFolder}/packages/gimbal/src/index.ts",
      "audit",
      "--cwd",
      "${workspaceFolder}/examples/${input:appInput}"
    ],
    "env": {
      "TS_NODE_PROJECT": "${workspaceFolder}/packages/gimbal/tsconfig.json"
    },
    "skipFiles": [
      "<node_internals>/**/*.js"
    ]
  }, {
    "type": "node",
    "request": "launch",
    "name": "test cmd",
    "runtimeArgs": [
      "-r",
      "ts-node/register",
      "-r",
      "tsconfig-paths/register"
    ],
    "args": [
      "${workspaceFolder}/packages/gimbal/src/index.ts",
      "--cwd",
      "${workspaceFolder}/../modir"
    ],
    "env": {
      "TS_NODE_PROJECT": "${workspaceFolder}/packages/gimbal/tsconfig.json"
    },
    "skipFiles": [
      "<node_internals>/**/*.js"
    ]
  }],
  "inputs": [{
    "type": "pickString",
    "id": "envFileInput",
    "description": "Which ENV file should be used?",
    "options": ["CircleCI/commit.env", "CircleCI/pr.env", "TravisCI/commit.env", "TravisCI/pr.env"],
    "default": "CircleCI/pr.env"
  }, {
    "type": "pickString",
    "id": "appInput",
    "description": "Which app do you want to run on?",
    "options": ["angular", "react"],
    "default": "react"
  }]
}
