{
  "name": "@modus/gimbal-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:check": "lerna run build:check",
    "clean": "rimraf '{examples,packages}/**/{artifacts,build,dist,lib}' '**/node_modules' '**/coverage'",
    "clean:examples": "rimraf 'examples/**/{artifacts,build,dist,lib,node_modules}'",
    "lerna:version": "lerna version patch --exact --force-publish --yes",
    "link": "lerna run link",
    "lint": "lerna run lint",
    "lint-staged": "lint-staged",
    "postinstall": "npm run bootstrap",
    "test": "lerna run test --stream",
    "test:coveralls": "cat ./coverage/lcov.info | coveralls",
    "test:nocov": "lerna run test:nocov --stream",
    "version:check": "versionator --exclude 'examples/**/package.json'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/bin/**/*.{js,jsx,ts,tsx},packages/**/src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@mitchellsimoens/versionator": "1.0.5",
    "@types/jest": "26.0.9",
    "@types/node": "14.0.27",
    "@typescript-eslint/eslint-plugin": "3.9.0",
    "@typescript-eslint/parser": "3.9.0",
    "@zerollup/ts-transform-paths": "1.7.18",
    "eslint": "7.6.0",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-import-resolver-lerna": "1.1.0",
    "eslint-import-resolver-typescript": "2.2.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "23.20.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.5",
    "husky": "4.2.5",
    "jest": "26.3.0",
    "lerna": "3.22.1",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "ts-jest": "26.2.0",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.9.0",
    "ttypescript": "1.5.10",
    "typescript": "3.9.7"
  }
}
