{
  "name": "@modus/gimbal-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:check": "lerna run build:check",
    "build:examples": "yarn --cwd examples/angular run build && yarn --cwd examples/react run build",
    "clean": "rimraf '{examples,packages}/**/{build,lib,dist,package-lock.json}' '**/node_modules' '**/coverage'",
    "lerna:version": "lerna version patch --exact --force-publish --yes",
    "link": "lerna run link",
    "lint": "lerna run lint",
    "lint-staged": "lint-staged",
    "postinstall": "yarn run bootstrap",
    "test": "jest --coverage",
    "test:coveralls": "cat ./coverage/lcov.info | coveralls",
    "test:nocov": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/bin/**/*.{js,jsx,ts,tsx},packages/**/src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@angular/cli": "8.0.3",
    "@types/jest": "24.0.15",
    "@types/node": "12.0.8",
    "@typescript-eslint/eslint-plugin": "1.10.2",
    "@typescript-eslint/parser": "1.10.2",
    "@zerollup/ts-transform-paths": "1.7.3",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "5.0.0",
    "eslint-import-resolver-lerna": "1.1.0",
    "eslint-import-resolver-typescript": "1.1.1",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-jest": "22.6.4",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.13.0",
    "husky": "2.4.1",
    "jest": "24.8.0",
    "lerna": "3.15.0",
    "lint-staged": "8.2.1",
    "prettier": "1.18.2",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tsconfig-paths": "3.8.0",
    "ttypescript": "1.5.7",
    "typescript": "3.5.2"
  }
}
